{{!
    @template block_myoverview/progress-bar

    This template renders a simple progress bar.

    Example context (json):
    {
        "progress": 50
    }
}}
<div class="d-inline-flex align-items-center w-100 rui-mo-progress-{{progress}}">
    <div class="rui-mo-progress-icon--done mr-2">
        <svg width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.75 12C4.75 7.99594 7.99594 4.75 12 4.75V4.75C16.0041 4.75 19.25 7.99594 19.25 12V12C19.25 16.0041 16.0041 19.25 12 19.25V19.25C7.99594 19.25 4.75 16.0041 4.75 12V12Z"></path>
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 12.75L10.1837 13.6744C10.5275 14.407 11.5536 14.4492 11.9564 13.7473L14.25 9.75"></path>
        </svg>
    </div>
    <div class="w-100">
        <div class="small mb-1">
            <span class="sr-only">{{#str}}aria:courseprogress, block_myoverview{{/str}}</span>
            {{#str}}completepercent, block_myoverview, <strong>{{progress}}</strong>{{/str}}
        </div>
        <div class="rui-mo-progress rui-progress mb-2">
            <div class="rui-progress-bar bar" role="progressbar" aria-valuenow="{{progress}}" style="width: {{progress}}%" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
</div>