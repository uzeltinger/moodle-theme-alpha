{{!
    @template theme_alpha/tmpl-maintenance

    space maintenance layout template.

    Context variables required for this template:
    * output - The core renderer for the page

    Example context (json):
    {
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Test page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headings make html validators happier</h1>"
         }
    }
}}
{{> theme_alpha/head }}

<body {{{ output.body_attributes }}}>
    {{> core/local/toast/wrapper}}

    <div id="page-wrapper">

        {{{ output.standard_top_of_body_html }}}

        <div id="page-maintenance" class="my-6 px-3 wrapper-xl">

            <div id="page-content" class="page-content wrapper-course">
                {{{ output.page_heading }}}
                <section id="region-main" aria-label="{{#str}}content{{/str}}">
                    {{{ output.main_content }}}
                </section>
            </div>

            {{> theme_alpha/footer-simple }}
        </div>

    </div>

</body>

</html>
{{#js}}
    M.util.js_pending('theme_alpha/loader');
    require(['theme_alpha/loader'], function() {
    M.util.js_complete('theme_alpha/loader');
    });
{{/js}}
